    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Test Current File",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "cwd": "${workspaceFolder}",
            "args": [
                "${fileDirname}/${fileBasenameNoExtension}.js",
                "--configJson",
                "test/config.json"
            ],
            "env": {
                "debug": "testFx:*",
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Test All (from npm build)",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "cwd": "${workspaceFolder}",
            "args": [
                "${workspaceFolder}/test",
                "--configJson",
                "test/config.json"
            ],
            "env": {
                "debug": "testFx:*",
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Test PortalTests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "cwd": "${workspaceFolder}",
            "args": [
                "${workspaceFolder}/test/PortalTests.js",
                "--configJson",
                "test/config.json"
            ],
            "env": {
                "debug": "testFx:*",
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Test All (from timebuild)",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "cwd": "${workspaceFolder}/objd/amd64",
            "args": [
                "${workspaceFolder}/objd/amd64/test",
                "--configJson",
                "${workspaceFolder}/objd/amd64/test/config.json"
            ],
            "env": {
                "debug": "testFx:*",
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests (obsolete, prefer newer method that reference source instead)",
            "program": "${workspaceFolder}\\objd\\amd64\\node_modules\\mocha\\bin\\_mocha",
            "cwd": "${workspaceFolder}\\objd\\amd64\\test",
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}\\objd\\amd64\\test"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}
