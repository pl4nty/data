// Place your settings in this file to overwrite the default settings
// More info https://code.visualstudio.com/docs/getstarted/settings
{
    "editor.renderWhitespace": "all",
    "editor.codeActionsOnSave": {
        "source.fixAll": "never",
        "source.fixAll.eslint": "never",
        "source.fixAll.stylelint": "never"
    },
    "files.exclude": {
        "/.config": true,
        "/.gen": true,
        "/.vscode": true,
        "/build": true,
        "/certificates": true,
        "/keys": true,
        "/loc": true,
        "/out": true,
        "/projects": true,
        "**/obj": true,
        "**/objd": true,
        "**/*.js.map": true,
        "**/*.js": {
            "when": "$(basename).ts"
        },
        "**/*.d.ts": {
            "when": "$(basename).ts"
        },
        "**/*.css": {
            "when": "$(basename).less"
        }
    },
    "search.exclude": {
        "/.config": true,
        "/.gen": true,
        "/.vscode": true,
        "/build": true,
        "/certificates": true,
        "/keys": true,
        "/loc": true,
        "/out": true,
        "/projects": true,
        "/RDTools": true,
        "/tools": true,
        "**/_generated": true,
        "**/obj": true,
        "**/objd": true,
        "**/*.js": {
            "when": "$(basename).ts"
        },
        "**/*.d.ts": {
            "when": "$(basename).ts"
        },
        "**/*.css": {
            "when": "$(basename).less"
        }
    },
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "less.lint.universalSelector": "warning",
    "less.lint.important": "warning",
    "less.lint.idSelector": "warning",
    "eslint.options": {
        "overrideConfigFile": "eslint.config.vscode.mjs"
    },
    "eslint.workingDirectories": [
        "./../"
    ],
    "stylelint.validate": [
        "css",
        "html",
        "less"
    ],
    "stylelint.reportNeedlessDisables": true,
    "mochaExplorer.files": "*.ts",
    "mochaExplorer.require": "ts-node/register",
    "mochaExplorer.cwd": "test"
}
